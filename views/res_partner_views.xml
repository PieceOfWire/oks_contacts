<odoo>
  <data>
      <record id="res_partner_kanban_view_inherit_base" model="ir.ui.view">
        <field name="name">oks.res.partner.kanban</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='display_name']" position="after">
            <field name="x_commercial_name" attrs="{'invisible':[('is_company', '==', 'False')]}"/>
          </xpath>
        </field>
      </record>

      <record id="res_partner_form_view_inherit_base" model="ir.ui.view">
        <field name="name">oks.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='vat']" position="before">
            <field name="x_commercial_name"/>
          </xpath>
        </field>
      </record>

  </data>
</odoo>